#for hexadecimal colors
#:import utils kivy.utils
ScreenManager:
    MenuScreen:
    RulesScreen:
    SettingsScreen:
    AboutScreen:
    ProfileScreen1:
    PlayersScreen1:
    ProfileScreen2:
    PlayersScreen2:
    ProfileScreen3:
    PlayersScreen3:
    ProfileScreen4:
    PlayersScreen4:
    ProfileScreen5:
    PlayersScreen5:
    Sentence:
<Label>
    color: app.theme_cls.primary_color
<MenuScreen>:

    name : 'menu'
    MDCard:
        size_hint : None,None
        size : 300, 400
        pos_hint : {"center_x": 0.5,"center_y" : 0.5}
        elevation: 10
        padding : 25
        spacing : 25
        orientation : 'vertical'
        MDLabel:
            id : play_label
            text : "Welcome!"
            font_size : 40
            halign : 'center'
            size_hint_y : None
            height: self.texture_size[1]
            padding_y: 15
        MDRoundFlatButton:
            text:"START"
            font_size: 12
            pos_hint:{"center_x":0.5}
            on_press:
                root.manager.current = 'profile1'
                root.manager.transition.direction= "up"
        MDRoundFlatButton:
            text:"RULES"
            font_size: 12
            pos_hint:{"center_x":0.5}
            on_press:
                root.manager.current = 'rules'
                root.manager.transition.direction= "up"
        MDRoundFlatButton:
            text:"SETTINGS"
            font_size: 12
            pos_hint:{"center_x":0.5}
            on_press:
                root.manager.current = 'settings'
                root.manager.transition.direction= "down"
        MDRoundFlatButton:
            text:"ABOUT"
            font_size: 12
            pos_hint:{"center_x":0.5}
            on_press:
                root.manager.current = 'about'
                root.manager.transition.direction= "right"
        MDRoundFlatButton:
            text:"EXIT"
            font_size: 12
            pos_hint:{"center_x":0.5}
            on_press: quit()
        Widget:
            size_hint_y: None
            height: 30

<RulesScreen>:
    name: 'rules'
    MDCard:
        size_hint : None,None
        size : 300, 400
        pos_hint : {"center_x": 0.5,"center_y" : 0.5}
        elevation: 10
        padding : 25
        spacing : 25
        orientation : 'vertical'
        MDLabel:
            text: 'RULES FOR THE GAME'
            halign: 'center'
        MDLabel:
            text: 'Game is played with 5 players. Answer each question with different answers. All the answers will be shuffled randomly and in the end you will have many funny sentences'
            halign: 'center'
        MDRectangleFlatButton:
            text: 'Back'
            pos_hint: {'center_x':0.5,'center_y':0.1}
            on_press:
                root.manager.current = 'menu'
                root.manager.transition.direction= "right"

<SettingsScreen>:
    name: 'settings'
    MDSwitch:
        pos_hint: {'center_x':0.5,'center_y':0.5}
        on_active: app.on_switch_active(self.active)
    MDLabel:
        text: 'Light Mode'
        pos_hint: {'center_x':0.42,'center_y':0.5}
        halign: 'center'
        font_style: 'Subtitle2'
    MDLabel:
        text: 'Dark Mode'
        pos_hint: {'center_x':1.05,'center_y':0.5}
        haligh: 'center'
        font_style: 'Subtitle2'
    MDRectangleFlatButton:
        text:'Go back to main menu'
        pos_hint: {'center_x':0.5,'center_y':0.4}
        on_press:
            root.manager.current = 'menu'
            root.manager.transition.direction= "right"

<AboutScreen>:
    name:'about'
    MDCard:
        size_hint : None,None
        size : 300, 400
        pos_hint : {"center_x": 0.5,"center_y" : 0.5}
        elevation: 10
        padding : 25
        spacing : 25
        orientation : 'vertical'
        MDLabel:
            text: 'Creators of the game:'
            halign: 'center'
        MDLabel:
            text: 'Hajiyeva Parvin,\n Abdullazada Nijat,\n Nasirova Nazrin,\n Babazada Yasmin'
            halign: 'center'
        MDLabel:
            text: 'Created for Study Project'
            halign: 'center'
        MDRoundFlatButton:
            text:"Back"
            font_size: 12
            pos_hint:{"center_x":0.5}
            on_press:
                root.manager.current = 'menu'
                root.manager.transition.direction= "left"
<ProfileScreen1>:

    name: 'profile1'
    MDCard:
        size_hint : None,None
        size : 300, 400
        pos_hint : {"center_x": 0.5,"center_y" : 0.5}
        elevation: 10
        padding : 25
        spacing : 25
        orientation : 'vertical'

        MDTextField:
            id:  data
            on_text: root.manager.get_screen("player1").ids.first.text = self.text
            hint_text: "Enter name for player 1"
            required: True
            max_text_length: 12
            icon_right: "account-key"
            icon_right_color: utils.get_color_from_hex('#fc4e77')
            pos_hint:{'center_x': 0.5, 'center_y': 0.5}
            size_hint_x:None
            helper_text:"Example: Mike"
            line_color_focus: utils.get_color_from_hex('#fc4e77')
            helper_text_mode:"on_focus"
            width:200
            line_color_normal: utils.get_color_from_hex('#fc4e77')


        MDRectangleFlatButton:
            text:'Save'
            text_color: utils.get_color_from_hex('#fc4e77')
            pos_hint: {'center_x':0.5}
            on_press:
                app.disable(data.text,root,'player1')
        MDRectangleFlatButton:
            text: 'Back'
            text_color: utils.get_color_from_hex('#fc4e77')
            pos_hint: {'center_x':0.5}
            on_press:
                root.manager.current = 'menu'
                root.manager.transition.direction= "right"

